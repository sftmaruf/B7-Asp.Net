@model ReaderCreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
            <h3 class="card-title">Create Reader</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" asp-antiforgery="true" asp-area="Admin" asp-controller="Reader"
                  asp-action="Create" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter reader name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Age"></label>
                        <input type="text" class="form-control" asp-for="Age" placeholder="Enter reader age">
                    </div>
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="Enter reader address">
                    </div>
                </div>
            <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.card -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->

